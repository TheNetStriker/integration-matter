  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/driver.ts",
      "preLaunchTask": "tsc: build - tsconfig.debug.json",
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "outputCapture": "std",
      "env": {
        "DEBUG": "ucapi:*",
        "UC_CONFIG_HOME": "${workspaceFolder}/config",
        "UC_DATA_HOME": "${workspaceFolder}/data"
      },
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
